<%- include('header') %>


<body>
    <div class="container">

        <%- include('title') %>
        <div class="d-flex justify-content-center">
            <div style="width: 50vw;">
                <canvas id="myChart"></canvas>
            </div>
        </div>
        
        <%- include('footer') %>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
    <script src="/chart.js"></script>
<script>

let _query = [];
<% adathalmaz.forEach(element => { %>
  _query.push({
    date: moment(new Date('<%= element.date %>')).format('YYYY-MM-DD'),
    amount: Number(<%= element.amount %>),
    type: Number(<%= element.type %>)
  })
<% }) %>
//Labels

let labels = [];
for (let i = 0; i < 31; i++) {
  let previous = new Date().setDate(new Date().getDate()-(31-i))
  labels.push(moment(previous).format('YYYY-MM-DD'));
}
//Datas

let datapoints = [];
for (let i = 0; i < labels.length; i++) {
  datapoints.push(EddigiOsszeg(i));
}

function EddigiOsszeg(meddig){
  let osszeg = Number(<%= user.loggedUserStartCapital %>);
  for (let i = 0; i < meddig; i++) {
    for (let j = 0; j < _query.length; j++) {
      if (labels[i] == moment(_query[j].date).format('YYYY-MM-DD')) {
        if (_query[j].type == 0) {
          osszeg += Number(_query[j].amount);
        } else {
          osszeg -= Number(_query[j].amount);
        }
      }
    }
  }
  return osszeg;
}

const data = {
  labels: labels,
  datasets: [
    {
      label: '',
      display: false  ,
      data: datapoints,
      borderColor: '#ad192a',
      fill: true,
      cubicInterpolationMode: 'monotone',
      tension: 0.4
    }
  ]
};

const config = {
    type: 'line',
    data: data,
    options: {
      responsive: true,
      plugins: {
        title: {
          display: true,
          text: '<%= user.loggedUser %> Egyenlegének alakulása'
        },
      },
      interaction: {
        intersect: false,
      },
      scales: {
        x: {
          display: true,
          title: {
            display: true
          }
        },
        y: {
          display: true,
          title: {
            display: true,
            text: 'Egyenleg'
          },
          suggestedMin: -10,
          suggestedMax: 200
        }
      }
    },
  };

  let myChart = document.getElementById('myChart');
  let _Chart = new Chart(myChart, config);
</script>


</body>

</html>