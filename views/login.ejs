<div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
    <h3 class="mt-3">Belépés</h3>
    <hr>
        <form action="/users/login" method="post">
            <div class="mb-3">
                <label for="usermail" class="form-label">E-mail cím</label>
                <input type="email" class="form-control" name="usermail">
            </div>
            <div class="mb-3">
                <label for="userpass" class="form-label">Jelszó</label>
                <input type="password" class="form-control" name="userpass">
            </div>
            <button type="submit" class="btn btn-primary mb-3">Bejelentkezés</button>
            <a href="/reg" class="btn btn-secondary mb-3" title="Regisztróció">Még nincs felhasználód?</a>
        </form>
</div>